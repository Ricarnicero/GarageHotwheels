<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form');
    const submitBtn = form?.querySelector('.submit-btn');

    // File upload handling
    const fileInput = document.getElementById('carPhotos');
    const fileUploadText = document.querySelector('.file-upload-text');

    if (fileInput && fileUploadText) {
      fileInput.addEventListener('change', (e) => {
        const files = e.target.files;
        if (files.length > 0) {
          const fileNames = Array.from(files).map(file => file.name).join(', ');
          fileUploadText.innerHTML = `
            <span class="upload-icon">üìÅ</span>
            <span>${files.length} archivo(s) seleccionado(s)</span>
          `;
        }
      });

      // Drag and drop functionality
      fileUploadText.addEventListener('dragover', (e) => {
        e.preventDefault();
        fileUploadText.style.borderColor = 'var(--neon-blue)';
        fileUploadText.style.color = 'var(--neon-blue)';
      });

      fileUploadText.addEventListener('dragleave', (e) => {
        e.preventDefault();
        fileUploadText.style.borderColor = 'var(--light-gray)';
        fileUploadText.style.color = 'var(--light-gray)';
      });

      fileUploadText.addEventListener('drop', (e) => {
        e.preventDefault();
        fileInput.files = e.dataTransfer.files;
        fileInput.dispatchEvent(new Event('change'));
        fileUploadText.style.borderColor = 'var(--light-gray)';
        fileUploadText.style.color = 'var(--light-gray)';
      });
    }

    // Form submission
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      if (submitBtn) {
        // Show loading state
        submitBtn.classList.add('loading');
        
        // Simulate API call
        setTimeout(() => {
          submitBtn.classList.remove('loading');
          submitBtn.classList.add('success');
          
          // Reset form after success
          setTimeout(() => {
            form.reset();
            submitBtn.classList.remove('success');
            
            // Reset file upload text
            if (fileUploadText) {
              fileUploadText.innerHTML = `
                <span class="upload-icon">üìÅ</span>
                <span>Arrastra fotos aqu√≠ o haz clic para seleccionar</span>
              `;
            }
          }, 3000);
        }, 2000);
      }
    });

    // Directions button
    document.querySelector('.directions-btn')?.addEventListener('click', () => {
      // In a real app, this would open maps with directions
      window.open('https://maps.google.com/directions/Tokyo+Shibuya', '_blank');
    });

    // Smooth scroll for footer links
    document.querySelectorAll('.footer a[href^="#"]').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const target = document.querySelector(link.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth' });
        }
      });
    });
  });
</script>
